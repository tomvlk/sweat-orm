{
  "name": "tomvlk/sweet-orm",
  "type": "library",
  "description": "Simple ORM for PHP, using your already existing structure, no command line required!",
  "keywords": ["database", "orm", "objects", "entity"],
  "homepage": "https://github.com/tomvlk/sweet-orm",
  "license": "MIT",
  "authors": [
    {
      "name": "Tom Valk",
      "email": "tomvalk@lt-box.info",
      "role": "Developer"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": ">=7.0.0",
    "doctrine/annotations": "1.4.0",
    "doctrine/collections": "1.4.0"
  },
  "require-dev": {
    "phpunit/phpunit": "6.2.2",
    "phpunit/php-code-coverage": "5.2.1",
    "satooshi/php-coveralls": "1.0.1",
    "codacy/coverage": "1.1.0"
  },
  "autoload": {
    "psr-4": {
      "SweetORM\\": "src/SweetORM"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SweetORM\\Tests\\": "tests/src",
      "SweetORM\\Tests\\Models\\": "tests/models"
    }
  },
  "archive": {
    "exclude": [
      "!vendor",
      "tests",
      "*phpunit.xml",
      ".travis.yml",
      ".coveralls.yml",
      "composer.phar"
    ]
  }
}
